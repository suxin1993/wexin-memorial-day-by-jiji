.inputform{
  width: 100%;
  display: flex;
  margin-bottom: 50rpx;
}
.input{
  width: 70%;
  padding: 10rpx;
  margin-top: 50rpx;
  margin-left: 70rpx;
  border-radius: 4px;
  box-shadow: inset 0 0 0 1rpx #7e7e7e;
}
.btn{
  box-shadow:inset 0 0 2px #7e7e7e ;
  border-radius: 4px;
  height: 70rpx;
  width: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 60rpx;
  font-weight: 600;
  color: rgb(137, 245, 239);
  margin-top: 50rpx;
  margin-left: 10rpx;
}
.todoList{
  color: #474747;
  width: 85%;
  margin: 30rpx auto;
  border-top: 1rpx solid #aaa;
}
.todoList .todo-content{
  width: 90%;
  margin: 30rpx auto;
  font-size: 0.9em;
  min-height: 670rpx;
}
.todoList .todo-content .todoLine{
  position: relative;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
  margin-top:10rpx; 
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #aaa;
}
.clearIcon{
  position: absolute;
  right: 10rpx;
}
.text{
  padding-left:10rpx; 
  width: 75%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.textDelete{
  color:#696969;
  text-decoration: line-through;
  padding-left:10rpx; 
  width: 75%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.todo-footer{
  margin-top: 15rpx;
  font-size: 0.8em;
  padding-top: 5rpx;
  padding-left: 15rpx;
  border-top: 2rpx solid #aaa;
  bottom: 50rpx;
  color: #696969;
}
.proverb{
  text-align: center;
  color: #696969;
  font-size: 0.65em;
  font-weight: 500;
  margin-top: 20rpx;
}