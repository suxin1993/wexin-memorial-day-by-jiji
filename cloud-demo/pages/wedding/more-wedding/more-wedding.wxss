/* pages/more-wedding/more-wedding.wxss */
@import '../../../utils/ripples.min.wxss';
.single-grid-container{
    float: left;
    margin: 20rpx 0 20rpx 6rpx;
}

.more-container{
    width: 100vw;
    display: flex;
    background: #f2f2f2;
    justify-content: center;
}
.con-wrap{
    min-height: 100vh;
}
.card-box {
    width: 94vw;
    height: 800px;
    overflow: hidden;
    background-color: #fff;
    border-radius: 5px;
    border:1px solid #eee;
    margin:10px;
    box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.06), 0 1rpx 0 0 rgba(0, 0, 0, 0.02);
}
.card-box .card-img{
    width:100%;
    height: 600px;
    margin-top:10px;
    background-position:center;
    background-repeat:no-repeat;
    background-size:cover;
}
.card-box .card-title {
    padding: 20rpx;
    font-size: 16px;
    line-height: 1.4em;
}

.card-box .card-time {
    padding: 0 20rpx 40rpx 20rpx;
    color: #999;
    font-size: 14px;
    line-height: 1.4em;
}
.card-author,.card-tag,.card-fromNow{
    margin-left: 20rpx;
    font-size: 12px;
    height: 12px;
    line-height: 12px;
    padding: 5px;
    color: #fff;
    border-radius: 5px;
}
.card-box .card-author{ background: #FA454C;}
.card-box .card-tag{ background: #9C2DFE; }
.card-box .card-fromNow{ background: #F89B2D;}
/* .card-box .card-fromNow{ background: #C26C46;} */
.card-con-wrap{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.card-con-left,.card-con-right{
    display: flex;
}
.card-con-right image{
    width: 26px;
    height: 26px;
    margin-left: 20rpx;
}
.card-con-right text{
    font-size: 14px;
    color: #999;
}
.card-con-right image{
    padding-right: 3px;
}
.card-con-right .card-agree, .card-comment{
    display: flex;
    align-items: center;
}
.card-con-right .card-comment{
    margin-right: 20rpx;
}
