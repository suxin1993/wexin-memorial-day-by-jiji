.tab .active {
  background: #fff;
  /* color: #98d361; */
}

.view-box {
  width: 100%;
  height: 100%;
}

.view {
  margin-top: 20rpx;
}

.view .img {
  position: relative;
  width: 100%;
  height: 250rpx;
}

.view .img image {
  width: 100%;
  height: 100%;
}

.view .img text {
  position: absolute;
  display: block;
  width: 100%;
  text-align: center;
  line-height: 250rpx;
  font-size: 30rpx;
  color: #eee;
  font-weight: bold;
  background: rgba(0, 0, 0, 0.75);
}

.imagesize text {
  position: absolute;
  display: block;
  width: 100%;
  text-align: center;
  line-height: 350rpx;
  font-size: 50rpx;
  color:#62c0c0;
  font-weight: bold;
}

.imagesize {
  margin-top: 10rpx;
  display: flex;
  justify-content: left;
}

.imagesize image {
  width: 100%;
  height: 350rpx;
}
