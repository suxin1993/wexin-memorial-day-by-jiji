/*选项*/

.tab {
  display: flex;
  justify-content: space-between;
  padding: 0 24rpx;
  padding-bottom: 20rpx;
  /* background: #98d361; */
  align-items: center;
}

.tab text {
  width: 124rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  /* background: #addc81; */
  color: #eee;
  font-size: 22rpx;
  border-radius: 80rpx;
}

